<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_1">

    <Button
        android:id="@+id/backToStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="498dp"
        android:layout_marginBottom="185dp"
        android:text="Back to Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/button_accent"
        android:textColor="@color/button_text_color"/>

    <TextView
        android:id="@+id/gameOver"
        android:layout_width="239dp"
        android:layout_height="71dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="405dp"
        android:text="Game Over"
        android:textIsSelectable="false"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/backToStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textWin"
        android:layout_width="117dp"
        android:layout_height="63dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="307dp"
        android:text="Win"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/backToStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOver"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/winnerType"
        android:layout_width="190dp"
        android:layout_height="63dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="307dp"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/backToStart"
        app:layout_constraintEnd_toStartOf="@+id/textWin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameOver"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtDistanceTravelled"
        android:layout_width="201dp"
        android:layout_height="35dp"
        android:layout_marginTop="129dp"
        android:layout_marginBottom="143dp"
        android:text="Distance Travelled:"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/backToStart"
        app:layout_constraintEnd_toStartOf="@+id/distanceTravelled"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winnerType"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/distanceTravelled"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="387dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWin"
        app:layout_constraintVertical_bias="0.312" />

</androidx.constraintlayout.widget.ConstraintLayout>