<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options"
    android:background="@color/soft_grey">

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="520dp"
        android:text="Save"
        android:backgroundTint="@color/maroon"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="520dp"
        android:text="Back"
        android:backgroundTint="@color/maroon"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtTimeLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:text="Game Time Limit (min):"
        android:textColor="@color/brown"/>

    <SeekBar
        android:id="@+id/seekTimeLimit"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:max="120"
        android:min="10"
        android:progressBackgroundTint="@color/brown"
        android:progressTint="@color/maroon"
        android:thumb="@drawable/IbHRI"/>

    <TextView
        android:id="@+id/txtCD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="Cooldown Duration (s):"
        android:textColor="@color/brown"/>

    <SeekBar
        android:id="@+id/seekCD"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:max="120"
        android:min="10"
        android:progressBackgroundTint="@color/brown"
        android:progressTint="@color/maroon"
        android:thumb="@drawable/IbHRI"/>

    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="160dp"
        android:text="Capture Distance (m):"
        android:textColor="@color/brown"/>

    <SeekBar
        android:id="@+id/seekDistance"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:max="10"
        android:min="1"
        android:progressBackgroundTint="@color/brown"
        android:progressTint="@color/maroon"
        android:thumb="@drawable/IbHRI"/>

    <TextView
        android:id="@+id/txtBoundary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="220dp"
        android:text="Game Boundary Radius (m):"
        android:textColor="@color/brown"/>

    <SeekBar
        android:id="@+id/seekBoundary"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:max="5000"
        android:min="100"
        android:progressBackgroundTint="@color/brown"
        android:progressTint="@color/maroon"
        android:thumb="@drawable/IbHRI"/>

    <SeekBar
        android:id="@+id/seekTimer"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:max="60"
        android:min="10"
        android:progressBackgroundTint="@color/brown"
        android:progressTint="@color/maroon"
        android:thumb="@drawable/IbHRI"/>

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:text="Countdown Timer (s):"
        android:textColor="@color/brown"/>

    <TextView
        android:id="@+id/txtHunters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="340dp"
        android:text="Starting Hunters: "
        android:textColor="@color/brown"
        android:progressBackgroundTint="@color/brown"
        android:progressTint="@color/maroon"
        android:thumb="@drawable/IbHRI"/>

    <SeekBar
        android:id="@+id/seekHunters"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:max="4"
        android:min="1"
        android:progressBackgroundTint="@color/brown"
        android:progressTint="@color/maroon"
        android:thumb="@drawable/IbHRI"/>

</RelativeLayout>