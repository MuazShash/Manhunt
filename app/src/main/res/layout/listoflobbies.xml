<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.AppCompat.popupTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:background="@color/background_1"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="32dp"
        app:cardBackgroundColor="@color/background_1"
        android:background="@drawable/layout_bg_popups"
        card_view:cardBackgroundColor="@color/background_2_dark"
        card_view:cardElevation="0dp">

        <ListView
            android:id="@+id/lobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:smoothScrollbar="true" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
