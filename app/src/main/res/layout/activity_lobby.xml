<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lstPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_1"
    tools:context=".Lobby">

    <Button
        android:id="@+id/selectHunter"
        android:layout_width="128dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:text="Hunter"
        android:backgroundTint="@color/button_accent"
        android:textColor="@color/button_text_color"/>

    <Button
        android:id="@+id/selectRunner"
        android:layout_width="128dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="30dp"
        android:text="Runner"
        android:backgroundTint="@color/button_accent"
        android:textColor="@color/button_text_color" />

    <TextView
        android:id="@+id/lobbyView2"
        android:layout_width="251dp"
        android:layout_height="31dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:textAlignment="center"
        android:text="You are a: Runner"
        android:gravity="center_horizontal" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/settings3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="103dp"
        android:text="Players"
        android:textSize="15dp"
        android:textColor="@color/text_color"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="479dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="131dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lstPlayers"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="450dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="141dp"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="54dp"
        android:text="Start Game"
        android:backgroundTint="@color/button_accent"
        android:textColor="@color/button_text_color" />

</RelativeLayout>